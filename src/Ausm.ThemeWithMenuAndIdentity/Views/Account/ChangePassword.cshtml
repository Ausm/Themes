@using Ausm.ThemeWithMenuAndIdentity.ViewModels.Account
@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}
<form asp-controller="Account" asp-action="ChangePassword" method="post" class="form-horizontal col-sm-8 col-sm-push-2  col-md-6 col-md-push-3 col-lg-push-4 col-lg-4">
    <h2>@ViewData["Title"]:</h2>
    <div class="form-group form-group-lg">
        <label asp-for="OldPassword" class="control-label"></label>
        <input asp-for="OldPassword" class="form-control" />
    </div>
    <div class="form-group form-group-lg">
        <label asp-for="NewPassword" class="control-label"></label>
        <input asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group form-group-lg">
        <label asp-for="ConfirmPassword" class="control-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>
    <button type="submit" class="btn btn-lg btn-primary col-xs-12 col-md-push-6 col-md-6">Change</button>
</form>
