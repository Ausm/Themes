@using Ausm.ThemeWithMenuAndIdentity.ViewModels.Account
@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}
<div class="page-header">
    <h2>@ViewData["Title"]:</h2>
</div>
<form asp-controller="Account" asp-action="ResetPassword" method="post" class="col-sm-8 col-sm-push-2  col-md-6 col-md-push-3 col-lg-push-4 col-lg-4">
    <input asp-for="Username" type="hidden" />
    <input asp-for="Token" type="hidden" />
    <div asp-validation-summary="All" class="alert alert-danger"></div>
    <div class="form-group form-group-lg">
        <label asp-for="NewPassword" class="control-label"></label>
        <input asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group form-group-lg">
        <label asp-for="ConfirmPassword" class="control-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>
    <button type="submit" class="btn btn-lg btn-primary col-xs-12 col-md-push-6 col-md-6">Change</button>
</form>
