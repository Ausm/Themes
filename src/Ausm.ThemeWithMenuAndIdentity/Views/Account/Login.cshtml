@using Ausm.ThemeWithMenuAndIdentity.ViewModels.Account
@model LoginViewModel
@{
    ViewData["Title"] = "Log in";
}

<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal col-sm-8 col-sm-push-2  col-md-6 col-md-push-3 col-lg-push-4 col-lg-4" >
    <h2>@ViewData["Title"].</h2>
    <div class="form-group form-group-lg">
        <label asp-for="Username" class="control-label"></label>
        <input asp-for="Username" class="form-control" />
    </div>
    <div class="form-group form-group-lg">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-lg btn-primary col-xs-12 col-md-push-6 col-md-6">Log in</button>
</form>
