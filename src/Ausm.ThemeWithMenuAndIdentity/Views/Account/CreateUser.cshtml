@using Ausm.ThemeWithMenuAndIdentity.ViewModels.Account
@model CreateUserViewModel
@{
    ViewData["Title"] = "Create User";
}

<form asp-controller="Account" asp-action="CreateUser" method="post" class="col-sm-8 col-sm-push-2  col-md-6 col-md-push-3 col-lg-push-4 col-lg-4">
    <h2>@ViewData["Title"].</h2>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group form-group-lg">
        <label asp-for="Username" class="control-label"></label>
        <input asp-for="Username" class="form-control" />
    </div>
    <div class="form-group form-group-lg">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group form-group-lg">
        <label asp-for="ConfirmPassword" class="control-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>
    <button type="submit" class="btn btn-lg btn-primary col-xs-12 col-md-push-6 col-md-6">Create</button>
</form>
